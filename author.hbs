{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<section class="q-author-profile-wrapper">
    <div class="q-author-profile-inner">
        <aside class="q-author-profile-sidebar">
            {{#author}}
            <main class="q-author-profile-sidebar-body">
                {{#if profile_image}}
                <div class="q-author-profile-pic-wrapper">
                    <img class="q-author-profile-pic" src="{{profile_image}}" alt="{{name}}" />
                </div>
                {{else}}
                <div class="q-author-profile-pic-wrapper">
                    <span class="q-author-profile-pic">{{> "icons/avatar"}}</span>
                </div>
                {{/if}}

                <div class="q-author-profile-meta">
                <h1 class="q-author-sub-title">{{name}}</h1>
                {{#if bio}}
                <p class="q-author-profile-bio">
                    {{bio}}
                    {{else}}
                    404 - bio not found
                </p>
                {{/if}}
                {{#if location}}
                <p class="author-profile-location">üåç {{location}}</p>
                {{/if}}
            </main>
            <footer class="q-author-profile-sidebar-footer">
                {{#if website}}
                <span><a class="q-icon" href="{{website}}" target="_blank" rel="noopener">{{> "icons/web"}}</a></span>
                {{/if}}
                {{#if twitter}}
                <span><a class="q-icon" href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a></span>
                {{/if}}
                {{#if facebook}}
                <span><a class="q-icon" href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a></span>
                {{/if}}
            {{/author}}
            </footer>
        </aside>
        <main class="q-author-content">
            <div class="q-author-post-list">
                {{#foreach posts}}
                  {{> "post-card-item"}}
                {{/foreach}}
              </div>
        </main>
    </div>
</section>